<!DOCTYPE html>
<html>
<head>
  <title>ImageVoz</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= stylesheet_link_tag "styles" %> 
  <%= csrf_meta_tags %>
</head>
<body>
<div id="top-nav" class="navbar navbar-inverse navbar-static-top">
    <div class="container-fluid">
        <div class="navbar-header">
            <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>
            <a class="navbar-brand" href="#">Dashboard</a>
        </div>
        <div class="navbar-collapse collapse">
            <ul class="nav navbar-nav navbar-right">
                <% if user_signed_in? %>
                <li><a href="/user/sign_out" data-method="delete"><i class="glyphicon glyphicon-lock"></i> Logout</a></li>

                <% else %>
                <li><a href="/user/sign_in"><i class="glyphicon glyphicon-lock"></i> Login</a></li>
                <% end %>
                
            </ul>
        </div>
    </div>
    <!-- /container -->
</div>
<div class="container-fluid">
    <div class="row">
        <div class="col-sm-3">
            <!-- Left column -->
            <hr>

            <ul class="nav nav-stacked">
            <li>
                    <ul class="nav nav-stacked collapse in" id="userMenu">
                    	<li style="padding-left: 20px;"><%= image_tag("logo.png", size: "70x70") %></li>
                        <li class="active"> <a href="/vozimage"><i class="glyphicon glyphicon-home"></i> Home</a></li>
                        <li><a href="/voz/show"><i class="glyphicon glyphicon-heart"></i> Image </a></li>
                        <li><a href="/voz"><i class="glyphicon glyphicon-cog"></i>Tool</a></li>
                        <li><a href="/voz/find"><i class="glyphicon glyphicon-search"></i> Find</a></li>
                    </ul>
                </li>
        </div>
        <!-- /col-3 -->
        <div class="col-sm-9">

        <%= yield %>
</div>
</body>
</html>
